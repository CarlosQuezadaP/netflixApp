<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_grap"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/fragmentMovies"
        android:name="com.instaleap.netflixapp.fragments.mainMenu.fragmentMovies"
        android:label="fragment_movies"
        tools:layout="@layout/fragment_movies" >
        <action
            android:id="@+id/action_fragmentMovies_to_fragmentDetailMovie"
            app:destination="@id/fragmentDetailMovie" />
    </fragment>
    <fragment
        android:id="@+id/fragmentDetailMovie"
        android:name="com.instaleap.netflixapp.fragments.mainMenu.FragmentDetailMovie"
        android:label="fragment_detail_movie"
        tools:layout="@layout/fragment_detail_movie" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.instaleap.netflixapp.fragments.mainMenu.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_fragmentSeries3"
            app:destination="@id/fragmentSeries" />
        <action
            android:id="@+id/action_homeFragment_to_fragmentMovies2"
            app:destination="@id/fragmentMovies" />
    </fragment>
    <fragment
        android:id="@+id/fragmentSeries"
        android:name="com.instaleap.netflixapp.fragments.mainMenu.FragmentSeries"
        android:label="fragment_series"
        tools:layout="@layout/fragment_series" >
        <action
            android:id="@+id/action_fragmentSeries_to_detailTvFragment"
            app:destination="@id/detailTvFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailTvFragment"
        android:name="com.instaleap.netflixapp.fragments.mainMenu.DetailTvFragment"
        android:label="fragment_detail_tv"
        tools:layout="@layout/fragment_detail_tv" />
</navigation>